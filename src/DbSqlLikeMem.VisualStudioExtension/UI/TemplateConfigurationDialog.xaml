<Window x:Class="DbSqlLikeMem.VisualStudioExtension.UI.TemplateConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prop="clr-namespace:DbSqlLikeMem.VisualStudioExtension.Properties"
        Title="{x:Static prop:Resources.TemplateConfigTitle}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="420" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="{x:Static prop:Resources.ModelTemplateLabel}" />
        <TextBox x:Name="ModelTemplatePathTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" />

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="{x:Static prop:Resources.RepositoryTemplateLabel}" />
        <TextBox x:Name="RepositoryTemplatePathTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" />

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="{x:Static prop:Resources.ModelOutputLabel}" />
        <TextBox x:Name="ModelOutputDirectoryTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" />

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="{x:Static prop:Resources.RepositoryOutputLabel}" />
        <TextBox x:Name="RepositoryOutputDirectoryTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8" />

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{x:Static prop:Resources.CancelButton}" Width="90" Margin="0,0,8,0" IsCancel="True" />
            <Button Content="{x:Static prop:Resources.SaveButton}" Width="90" IsDefault="True" Click="OnSaveClick" />
        </StackPanel>
    </Grid>
</Window>
