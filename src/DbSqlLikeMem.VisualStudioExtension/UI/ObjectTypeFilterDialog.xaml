<Window x:Class="DbSqlLikeMem.VisualStudioExtension.UI.ObjectTypeFilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filtro de itens"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Filtro:" />
        <TextBox x:Name="FilterTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" />

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Modo:" />
        <ComboBox x:Name="FilterModeCombo" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" SelectedIndex="0">
            <ComboBoxItem Content="ContÃ©m" Tag="Like" />
            <ComboBoxItem Content="Exato" Tag="Equals" />
        </ComboBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="90" Margin="0,0,8,0" IsCancel="True" />
            <Button Content="Aplicar" Width="90" IsDefault="True" Click="OnSaveClick" />
        </StackPanel>
    </Grid>
</Window>
