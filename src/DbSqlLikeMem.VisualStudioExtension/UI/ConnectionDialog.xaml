<Window x:Class="DbSqlLikeMem.VisualStudioExtension.UI.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prop="clr-namespace:DbSqlLikeMem.VisualStudioExtension.Properties"
        Title="{x:Static prop:Resources.ConnectionDialogTitle}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="{x:Static prop:Resources.NameLabel}" />
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" />

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="{x:Static prop:Resources.DatabaseLabel}" />
        <ComboBox x:Name="DatabaseTypeCombo" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" SelectedIndex="0">
            <ComboBoxItem Content="SqlServer" />
            <ComboBoxItem Content="PostgreSql" />
            <ComboBoxItem Content="MySql" />
            <ComboBoxItem Content="Oracle" />
            <ComboBoxItem Content="Sqlite" />
            <ComboBoxItem Content="Db2" />
        </ComboBox>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Top" Text="{x:Static prop:Resources.ConnectionStringLabel}" />
        <TextBox x:Name="ConnectionStringTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" MinHeight="80" TextWrapping="Wrap" AcceptsReturn="True" />

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{x:Static prop:Resources.CancelButton}" Width="90" Margin="0,0,8,0" IsCancel="True" />
            <Button Content="{x:Static prop:Resources.SaveButton}" Width="90" IsDefault="True" Click="OnSaveClick" />
        </StackPanel>
    </Grid>
</Window>
